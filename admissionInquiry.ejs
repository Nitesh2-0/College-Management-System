

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admission Inquiry Feed</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css"
    rel="stylesheet"/>
  <style>
    /* Custom CSS for additional styling */
    .header-bg {
      background-color: #4CAF50;
    }
    .header-title {
      color: #fff;
    }
    .content-card {
      background-color: #F8F9FA;
      border-radius: 20px;
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }
    .card-header {
      background-color: #EDF2F7;
      border-top-left-radius: 20px;
      border-top-right-radius: 20px;
    }
    .card-body {
      color: #4A5568;
    }
  </style>
</head>
<body class="bg-gray-100 ">
  <!-- Header Section -->
  <header class="py-4 header-bg w-full">
    <div class="container mx-auto px-4">
      <h1 class="text-3xl font-semibold header-title">Admission Inquiry Feed</h1>
    </div>
  </header>

  <!-- Main Content Section -->
  <div class="flex flex-wrap w-full bg-gray-100 ">
   <% if (inquiries.length > 0) { %>
    <% inquiries.forEach(user => { %>
      <div class="w-full md:w-1/2 lg:w-1/3 xl:w-1/4 p-4">
        <div class="max-w-md mx-auto content-card">
          <div class="card-header py-4 px-4 flex items-center justify-center">
            <img class="w-20 h-20 rounded-full rounded" src="https://imgs.search.brave.com/G7PMeUgzG1zh75C7cIXIVWlrcnUczSU8lKlLqkCC16w/rs:fit:860:0:0/g:ce/aHR0cHM6Ly9tZWRp/YS5pc3RvY2twaG90/by5jb20vaWQvMTMw/OTMyODgyMy9waG90/by9oZWFkc2hvdC1w/b3J0cmFpdC1vZi1z/bWlsaW5nLW1hbGUt/ZW1wbG95ZWUtaW4t/b2ZmaWNlLmpwZz9z/PTYxMng2MTImdz0w/Jms9MjAmYz1rUHZv/Qm02cUNZelFYTUFu/OUpVdHFMUkVYZTkt/UGxaeU1sOWktaWJh/VnVZPQ" alt="photo">
          </div>
          <div class="card-body py-6 px-6">
            <p><b>Name : <%= user.name %></b></p>
            <p>Email : <%= user.email %></p>
            <p>Phone Number : <%= user.phone %></p>
            <p>Course : <%= user.course %></p>
            <p class="mt-1 mb-1"><b>Message</b></p>
            <p><%= user.message %></p>
          </div>
          <a href="/admissionInquiry/result/delete/<%= user._id %>"><i class="ri-delete-bin-4-line p-2 bg-red-700 rounded-full text-white"></i></a>
        </div>
      </div>
    <% }) %>
   <% } else {%>
    <div class="w-full md:w-1/2 lg:w-1/3 xl:w-1/4 p-4">
      <div class="max-w-md mx-auto content-card">
        <div class="card-header py-4 px-6">
          <h2 class="text-xl font-semibold">Latest Inquiry</h2>
        </div>
        <div class="card-body py-6 px-6">
          <p class="text-lg">No admission inquiries yet.</p>
        </div>
      </div>
    </div>
    <% } %>
  </div>
  <div class="w-full flex justify-center items-center">
    <a href="/adminFeed"><button type="button" class="px-10 py-2 bg-blue-700 rounded-lg mb-2 flex justify-center items-center text-white shadow-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 hover:bg-blue-600 transition-colors duration-300">Back</button></a>
  </div>
</body>
</html>
