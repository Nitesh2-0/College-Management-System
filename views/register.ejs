<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.1.4/dist/tailwind.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
  <link rel="shortcut icon" href="/images/TIT-logo.webp" type="image/x-icon">
</head>
<body class="flex justify-center items-center h-screen bg-gray-100 p-4 md:p-0">
  <div class="bg-white p-8 rounded-lg shadow-md max-w-md w-full">
    <h1 class="text-2xl font-bold mb-4 text-center">Register</h1>
    <% if (errMsg) { %>
      <div class="mb-4">
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
          <strong class="font-bold">Error: </strong>
          <span class="block sm:inline"><%= errMsg %></span>
        </div>
      </div>
    <% } %>
    <form action="/register" method="POST">
      <div class="mb-4">
        <label for="username" class="block text-sm font-medium">Username or Email</label>
        <div class="relative">
          <i class="input-icon fas fa-user text-gray-400 absolute left-3 top-1/2 transform -translate-y-1/2"></i>
          <input type="text" id="username" name="username" required class="mt-1 p-2 pl-10 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" placeholder="Enter your username">
        </div>
      </div>
      <div class="mb-4">
        <label for="number" class="block text-sm font-medium">Mobile Number</label>
        <div class="relative">
          <i class="input-icon fas fa-phone text-gray-400 absolute left-3 top-1/2 transform -translate-y-1/2"></i>
          <input type="text" id="number" name="number" required class="mt-1 p-2 pl-10 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" placeholder="Enter your mobile number">
        </div>
      </div>
      <div class="mb-4">
        <label for="password" class="block text-sm font-medium">Password</label>
        <div class="relative">
          <i class="input-icon fas fa-lock text-gray-400 absolute left-3 top-1/2 transform -translate-y-1/2"></i>
          <input type="password" id="password" name="password" required class="mt-1 p-2 pl-10 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" placeholder="Enter your password">
        </div>
      </div>
      <div class="mb-4">
        <input type="checkbox" id="adminCheckbox" name="admin" class="mt-1 p-2 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
        <label for="adminCheckbox" class="ml-2 text-sm font-medium">Are you an admin?</label>
      </div>
      <div class="mb-4" id="adminIdInput" style="display: none;">
        <label for="adminId" class="block text-sm font-medium">Admin ID</label>
        <div class="relative">
          <i class="input-icon fas fa-id-badge text-gray-400 absolute left-3 top-1/2 transform -translate-y-1/2"></i>
          <input type="text" id="adminId" name="adminId" class="mt-1 p-2 pl-10 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" placeholder="Enter your admin ID">
        </div>
      </div>
      <button type="submit" class="w-full bg-indigo-600 text-white p-2 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-opacity-50">Register</button>
    </form>
    <p class="mt-4 text-center text-sm">
      Already have an account? <a href="/login" class="text-indigo-600 hover:text-indigo-800">Login here</a>
    </p>
  </div>
  
  <script>
    const adminCheckbox = document.getElementById('adminCheckbox');
    const adminIdInput = document.getElementById('adminIdInput');

    adminCheckbox.addEventListener('change', function() {
      if (this.checked) {
        adminIdInput.style.display = 'block';
        adminIdInput.querySelector('input').setAttribute('required', 'required'); 
      } else {
        adminIdInput.style.display = 'none';
        adminIdInput.querySelector('input').removeAttribute('required'); 
      }
    });
  </script>
</body>
</html>
